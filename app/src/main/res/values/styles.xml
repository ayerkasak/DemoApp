<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_15dp</item>
        <item name="android:background">@color/editTextBackground</item>
        <item name="android:padding">@dimen/dimen_15dp</item>
        <item name="android:textSize">@dimen/txt15sp</item>
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>





</resources>
